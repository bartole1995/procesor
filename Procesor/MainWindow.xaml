        </Grid.Background>
        <TextBox x:Name="TextC" HorizontalAlignment="Left" Height="23" Margin="548,180,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextA" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="548,115,0,0"/>
        <TextBox x:Name="TextB" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="548,148,0,0"/>
        <TextBox x:Name="TextD" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="548,214,0,0"/>
        <CheckBox x:Name="DX" Content="DX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="153,211,0,0"/>
        <CheckBox x:Name="CX" Content="CX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="153,191,0,0"/>
        <CheckBox x:Name="BX" Content="BX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="153,171,0,0"/>
        <CheckBox x:Name="AX" Content="AX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="153,151,0,0"/>
        <CheckBox x:Name="DXBox" Content="DX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="242,211,0,0"/>
        <CheckBox x:Name="CXBox" Content="CX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="242,191,0,0"/>
        <CheckBox x:Name="BXBox" Content="BX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="242,171,0,0"/>
        <CheckBox x:Name="AXBox" Content="AX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="242,151,0,0"/>
        <Label Content="To" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="238,120,0,0"/>
        <Label Content="From" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="153,120,0,0"/>
        <Label Content="DX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="504,214,0,0" RenderTransformOrigin="0.609,0.43" />
        <Label Content="CX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="504,180,0,0" />
        <Label Content="BX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="504,148,0,0"/>
        <Label Content="AX" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="504,112,0,0" RenderTransformOrigin="-5.859,0.766"/>
        <Button Content="Move" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="345,169,0,0" Click="Button_Click"/>

    </Grid>
</Window>
